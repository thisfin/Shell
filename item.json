{
    "comment": "weapp写起来太麻烦了",
    "data": {},
    "view": {
        "type": "container",
        "styleBinding": {
            "marginTop": "0",
            "width": "640",
            "height": "344",
            "forceOnload": "true",
            "layout": "absoluteLayout"
        },
        "events": [
            {
                "type": "onload",
                "actions": [
                    {
                        "type": "sendRequest",
                        "param": {
                            "apiAlias": "initRequest",
                            "apiName": "mtop.tmw.keyword.searchlist.init",
                            "apiVersion": "1.0",
                            "needLogin": "false",
                            "param": {
                                "keyword": "$keyWord",
                                "sellerId": "$sellerId"
                            },
                            "showErrorView": "true"
                        },
                        "callback": [
                            {
                                "type": "changeData",
                                "param": {
                                    "$status": "${initRequest}.data.status",
                                    "$itemNumber": "${initRequest}.data.awardBeans.extra.remainingQuantity",
                                    "$validTime2": "${initRequest}.data.awardBeans.extra.remainingMinutes",
                                    "$validTime": "${initRequest}.data.awardBeans.extra.expireTime",
                                    "$ruleUrl": "${initRequest}.data.activityRuleUrl",
                                    "$itemTitle": "${initRequest}.data.awardBeans.name",
                                    "$itemPic": "${initRequest}.data.awardBeans.extra.picUrl",
                                    "$itemUrl": "${initRequest}.data.awardBeans.extra.itemUrl",
                                    "$finalPrice": "${initRequest}.data.awardBeans.extra.finalPrice",
                                    "$originalPrice": "${initRequest}.data.awardBeans.extra.oPrice"
                                }
                            },
                            {
                                "type": "changeStyle",
                                "param": {
                                    "viewId": "finalPriceLabel",
                                    "styleBinding": {
                                        "width": "-2"
                                    }
                                }
                            },
                            {
                                "type": "changeStyle",
                                "param": {
                                    "viewId": "originalPrice",
                                    "styleBinding": {
                                        "width": "-2"
                                    }
                                }
                            },
                            {
                                "type": "refreshView",
                                "param": {
                                    "viewId": "itemImageView"
                                }
                            },
                            {
                                "type": "refreshView",
                                "param": {
                                    "viewId": "itemMaskImageView"
                                }
                            },
                            {
                                "type": "refreshView",
                                "param": {
                                    "viewId": "itemTitleLabel"
                                }
                            },
                            {
                                "type": "refreshView",
                                "param": {
                                    "viewId": "infoLabel"
                                }
                            },
                            {
                                "type": "refreshView",
                                "param": {
                                    "viewId": "finalPriceLabel"
                                }
                            },
                            {
                                "type": "refreshView",
                                "param": {
                                    "viewId": "originalPrice"
                                }
                            },
                            {
                                "type": "refreshView",
                                "param": {
